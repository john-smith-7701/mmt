<html lang="ja">
    <head>
        <title>Matrix</title>
        <meta charset="UTF-8">
        %= stylesheet begin
TABLE {
    border-collapse:collapse;
    border:1px solid
}
h1 {
        color:white;
        background-color:black;
}
.fixed00{
      position: sticky;
      top: 1;
      left: 30;
}
.fixed04{
      position: sticky;
      top: 50;
      left: 1;
}
        %== $self->matrixFixedCss(3,3,8,11,11);
        % end
        %= javascript begin
        %== $self->keyDown();
        % end
    </head>
    <body>
        <h1 class="fixed00">行列固定テーブルのCSS</h1>
        <table>
            <tr><td class="fixed04" style="vertical-align:top;">
                    <pre class="fixed04">
                    <div id=item1></div>
                    </pre>
                </td>
                <td>
                    <table border=1>
                        <tr>
                           %== $self->head_line(); 
                        </tr>
                        %== $self->cell_make();
                        <tr><td class="fixed91">合計</td>
                            <td class="fixed92">10,000</td>
                            <td class="fixed93">10,001</td>
                            <td class="fixed93">10,002</td>
                            <td class="fixed93">10,003</td>
                        </tr>
                    </table>
            </td>
            </tr>
        </table>
    </body>
</html>


